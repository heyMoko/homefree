<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/signin_expert3_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signin_expert3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="정리수납 전문가 자격증을\n업로드해 주세요!"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_expert3_title" />

    <ImageView
        android:id="@+id/photo_image_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_baseline_add_24"
        app:layout_constraintBottom_toTopOf="@id/signin_expert3_next_btn"
        app:layout_constraintEnd_toEndOf="@id/signin_expert3_tv"
        app:layout_constraintStart_toStartOf="@id/signin_expert3_tv"
        app:layout_constraintTop_toBottomOf="@id/signin_expert3_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signin_expert3_next_btn"
        android:layout_width="0dp"
        android:background="@drawable/loginbutton_design"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="@id/signin_expert3_tv"
        app:layout_constraintEnd_toEndOf="@id/signin_expert3_tv"
         />


</androidx.constraintlayout.widget.ConstraintLayout>