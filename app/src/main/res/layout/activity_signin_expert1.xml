<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/signin_expert1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="회원가입"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/signin_expert1_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="35dp"
        android:text="전문가로\n원하는 전문가를 직접 선택하세요!"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_expert1_title" />

    <CheckBox
        android:id="@+id/agree_button_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/agree_btn_design"
        android:button="@drawable/btn_radio"
        android:buttonTint="@color/black"
        android:text="전체동의"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signin_expert1_text" />

    <CheckBox
        android:id="@+id/check1"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:button="@drawable/btn_radio"
        android:scaleY="0.9"
        android:scaleX="0.9"
        android:text="[필수] 개인정보처리방침"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/agree_button_total"
        app:layout_constraintTop_toBottomOf="@id/agree_button_total" />

    <TextView
        android:id="@+id/check1_tv"
        app:layout_constraintTop_toTopOf="@id/check1"
        app:layout_constraintBottom_toBottomOf="@id/check1"
        app:layout_constraintEnd_toEndOf="@id/agree_button_total"
        android:text="보기"
        android:textSize="12sp"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/check2"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:button="@drawable/btn_radio"
        android:scaleY="0.9"
        android:scaleX="0.9"
        android:text="[필수] 이용약관"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/agree_button_total"
        app:layout_constraintTop_toBottomOf="@id/check1" />

    <TextView
        android:id="@+id/check2_tv"
        app:layout_constraintTop_toTopOf="@id/check2"
        app:layout_constraintBottom_toBottomOf="@id/check2"
        app:layout_constraintEnd_toEndOf="@id/agree_button_total"
        android:text="보기"
        android:textSize="12sp"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/check3"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:button="@drawable/btn_radio"
        android:scaleY="0.9"
        android:scaleX="0.9"
        android:text="[필수] 개인정보 수집 및 이용 동의서"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/agree_button_total"
        app:layout_constraintTop_toBottomOf="@id/check2" />

    <TextView
        android:id="@+id/check3_tv"
        app:layout_constraintTop_toTopOf="@id/check3"
        app:layout_constraintBottom_toBottomOf="@id/check3"
        app:layout_constraintEnd_toEndOf="@id/agree_button_total"
        android:text="보기"
        android:textSize="12sp"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/halfline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="25dp"
        android:background="@color/dark_gray"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintTop_toBottomOf="@id/check3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/marketing_tv"
        app:layout_constraintTop_toBottomOf="@id/halfline"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="@id/check3"
        android:text="마케팅 정보 수신 동의"
        android:layout_marginStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/marketing_tv_tv"
        app:layout_constraintTop_toTopOf="@id/marketing_tv"
        app:layout_constraintBottom_toBottomOf="@id/marketing_tv"
        app:layout_constraintEnd_toEndOf="@id/agree_button_total"
        android:text="보기"
        android:textSize="12sp"
        android:layout_marginEnd="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/check4"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:button="@drawable/btn_radio"
        android:scaleY="0.9"
        android:scaleX="0.9"
        android:text="어플리케이션 푸쉬알림 수신 동의"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="@id/agree_button_total"
        app:layout_constraintTop_toBottomOf="@id/marketing_tv" />

    <CheckBox
        android:id="@+id/check5"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:button="@drawable/btn_radio"
        android:scaleY="0.9"
        android:scaleX="0.9"
        android:text="카카오톡 메세지 수신 동의"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/agree_button_total"
        app:layout_constraintTop_toBottomOf="@id/check4" />

    <CheckBox
        android:id="@+id/check6"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:button="@drawable/btn_radio"
        android:scaleY="0.9"
        android:scaleX="0.9"
        android:text="SMS 문자서비스 수신 동의"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/agree_button_total"
        app:layout_constraintTop_toBottomOf="@id/check5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signin_expert1_next_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="45dp"
        android:background="@drawable/loginbutton_design"
        android:text="@string/next"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/agree_button_total"
        app:layout_constraintStart_toStartOf="@id/agree_button_total" />



</androidx.constraintlayout.widget.ConstraintLayout>